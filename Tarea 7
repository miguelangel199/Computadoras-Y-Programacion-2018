#include <stdio.h>
#include <stdlib.h>
   int main()
   {
    int num1=0;
    int num2=0;
    int num3=0;
    system("clear");
    printf("programa que nos dice cual es el nuemro menor. pero deben de ser diferentes y positivos ademas de enteros.\n\n");
    printf("Introduce el primer n�mero entero\n");
    scanf("%d",& num1);
    printf("Introduce el segundo n�mero entero\n");
    scanf("%d",& num2);
    printf("Introduce el tercer n�mero entero\n");
    scanf("%d",& num3);
    if((num1!=num2 && num1!=num3 && num2!=num3)&&((num1 && num2 && num3)>0))
    {
        if(num1<num2 && num1<num3)
        {
            printf("\n%i es el menor",num1);
            printf("\n\nFin\n");
        }
        else
        {   
            if(num2<num1 && num2<num3)
            {
                printf("\n%i es menor",num2);
                printf("\n\nFIN\n");
            }
            else
            {   
                printf("\n%i es menor",num3);
                printf("\n\nFin\n");
            }
        }   
    }           
    else        
        printf("\ndebes de poner un numero positivo, diferentes y enteros\n");
}
